<resources>

    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Theme.Bacon.Detail">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- override text appearance to increase font on tablet -->
    <style name="TextAppearance.Bacon.Display1" parent="@style/TextAppearance.AppCompat.Display1">
    </style>

    <style name="TextAppearance.Bacon.Title" parent="@style/TextAppearance.AppCompat.Title">
    </style>

    <style name="TextAppearance.Bacon.Subhead" parent="@style/TextAppearance.AppCompat.Subhead">
    </style>

    <style name="TextAppearance.Bacon.Body1" parent="@style/TextAppearance.AppCompat.Body1">
    </style>

</resources>
